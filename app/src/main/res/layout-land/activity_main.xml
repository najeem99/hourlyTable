<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    tools:context=".MainActivity">




    <TextView
        android:layout_width="320dp"
        android:layout_height="110dp" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitobold"
        android:text="DAY"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="325dp"
        android:layout_height="62dp"
        android:layout_below="@+id/t1"

        android:text="PERIOD 1 - "
        android:textSize="24sp"
        android:typeface="normal" />

    <TextView
            android:id="@+id/t3"
        android:layout_below="@+id/t2"
        android:layout_width="325dp"
        android:layout_height="62dp"
            android:text="PERIOD 2 - "
            android:textSize="24sp"
            android:typeface="normal" />
        <TextView
            android:id="@+id/t4"
            android:layout_below="@+id/t3"

            android:layout_width="325dp"
            android:layout_height="62dp"
            android:text="INTERVAL"
            android:textSize="24sp"
            android:typeface="normal" />
        <TextView
            android:id="@+id/t5"
            android:layout_below="@+id/t4"
            android:layout_width="325dp"
            android:layout_height="62dp"
            android:text="PERIOD 3 - "
            android:textSize="24sp"
            android:typeface="normal" />
        <TextView
            android:layout_below="@+id/t5"
            android:id="@+id/t6"
            android:layout_width="325dp"
            android:layout_height="62dp"
            android:text="PERIOD 4 - "
            android:textSize="24sp"
            android:typeface="normal" />

    <TextView
        android:id="@+id/t7"
        android:layout_width="325dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="15dp"
        android:text="BREAK - "
        android:textSize="24sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/t8"
        android:layout_width="325dp"
        android:layout_height="62dp"
        android:layout_marginEnd="15dp"

        android:layout_below="@id/t7"
        android:layout_alignParentEnd="true"

        android:text="PERIOD 5 - "
        android:textSize="24sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/t9"
        android:layout_width="325dp"
        android:layout_height="62dp"
        android:layout_below="@id/t8"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="15dp"
        android:text="PERIOD 6 - "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/t10"
        android:layout_width="325dp"
        android:layout_height="62dp"
        android:layout_below="@id/t9"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="15dp"
        android:text="PERIOD 7 - "
        android:textSize="24sp" />


